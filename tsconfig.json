{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "rootDirs": [],
    "removeComments": true,
    "strict": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./",
    "baseUrl": "./src",
    "outDir": "./dist",
    "paths": {
      "~config/*": ["config/*"],
      "~infra/*": ["infra/*"],
      "~http/*": ["infra/http/*"],
      "~modules/*": ["modules/*"],
      "~core/*": ["core/*"],
      "~controllers/*": ["adapters/controllers/*"],
      "~handlers/*": ["adapters/handlers/*"]
    },
    "typeRoots": [
      "./src/@types",
      "./node_modules/@types"
    ]
  },
  "include": ["./src/"]
}
